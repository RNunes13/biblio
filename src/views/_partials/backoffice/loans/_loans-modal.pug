- var imgRemoveIconNotFound = "data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7";

div(class="rn-loans__modal modal modal__lg hidden js--admin-loans-modal", rv-class-hidden="app.state.showModal | eq false")
  div(class="modal__backdrop", rv-on-click="app.controller.loan.close")
  div(class="modal__content")
    div(class="modal__heading")
      p(class="modal__title", rv-text="app.state.modalTitle")
      button(class="modal__close", rv-on-click="app.controller.loan.close")
    div(class="modal__body")
      form(class="rn-form")
        fieldset(rv-disabled="app.state.loans.selected.isSubmiting")
          div(class="rn-form__row")
            div(class="rn-form__group user")
              label(class="rn-form__label", for="user_id") Usu√°rio
              input(
                id="user_id"
                type="text"
                required="required"
                class="rn-form__input"
                rv-value="app.state.loans.selected.user_id"
              )
            div(class="rn-form__group book")
              label(class="rn-form__label", for="book_id") Libro
              input(
                id="book_id"
                type="text"
                required="required"
                class="rn-form__input"
                rv-value="app.state.loans.selected.book_id"
              )
    div(class="modal__footer")
      button(class="rn-btn rn-btn__primary", rv-on-click="app.controller.loan.save") Salvar
      button(class="rn-btn rn-btn__primary--outline close", rv-on-click="app.controller.loan.close") Fechar
